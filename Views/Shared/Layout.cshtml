
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name=" viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
