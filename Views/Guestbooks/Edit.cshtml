@model final.Models.Guestbooks

@{
    ViewBag.Title = "修改留言";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@* 匯入驗證欄位所須的JavaScript*@
@* 匯入驗證欄位所須的JavaScript*@
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval.js")
}

@* 建立修改留言表格*@
<div class="container">
    @using (Html.BeginForm())
    {
        <h3> 修改留言</h3>
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Content)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Content)
                    @Html.ValidationMessageFor(model => model.Content)
                </td>
            </tr>
        </table>

        @* 判斷是否有人回覆，如果無人回覆，即可修改，否則不可修改*@

        if (Model.ReplyTime == null)
        {
            <input type="submit" value=" 修改留言" />
        }
        else
        {
            <text> 此留言已回覆無法修改，請</text>
            @Html.ActionLink(" 返回列表", "Index")
        }
    }
</div>